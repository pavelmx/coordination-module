<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">


    <changeSet id="create_table_report" author="oadmin">
        <createTable tableName="report">
            <column name="id" type="bigint" defaultValueSequenceNext="sq_report">
                <constraints primaryKey="true" primaryKeyName="pk_report_id" nullable="false"/>
            </column>
            <column name="project_id" type="bigint"></column>
            <column name="employee_id" type="bigint"></column>
            <column name="task" type="varchar(255)"></column>
            <column name="descriptionTask" type="varchar(255)"></column>
            <column name="hoursForTask" type="float"></column>
            <column name="dateExecuteTask" type="date"></column>
            <column name="created" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP"></column>
            <column name="updated" type="timestamp"></column>
        </createTable>
    </changeSet>

    <changeSet id="create_table_project" author="oadmin">
        <createTable tableName="project">
            <column name="id" type="bigint" defaultValueSequenceNext="sq_project">
                <constraints primaryKey="true" primaryKeyName="pk_project_id" nullable="false"/>
            </column>
            <column name="model" type="varchar(255)"></column>
            <column name="name" type="varchar(255)"></column>
            <column name="hoursForProject" type="int"></column>
            <column name="startDate" type="date"></column>
            <column name="endDate" type="date"></column>
            <column name="created" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP"></column>
            <column name="updated" type="timestamp"></column>
        </createTable>
    </changeSet>

    <changeSet id="create_table_customer" author="oadmin">
        <createTable tableName="customer">
            <column name="id" type="bigint" defaultValueSequenceNext="sq_customer">
                <constraints primaryKey="true" primaryKeyName="pk_customer_id" nullable="false"/>
            </column>
            <column name="location" type="varchar(255)"></column>
            <column name="name" type="varchar(255)"></column>
            <column name="contacts" type="varchar(255)"></column>
            <column name="created" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP"></column>
            <column name="updated" type="timestamp"></column>
        </createTable>
    </changeSet>

    <changeSet id="create_table_leave" author="oadmin">
        <createTable tableName="leave">
            <column name="id" type="bigint" defaultValueSequenceNext="sq_leave">
                <constraints primaryKey="true" primaryKeyName="pk_leave_id" nullable="false"/>
            </column>
            <column name="employee_id" type="bigint"></column>
            <column name="cause" type="varchar(255)"></column>
            <column name="startLeave" type="date"></column>
            <column name="endLeave" type="date"></column>
            <column name="created" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP"></column>
            <column name="updated" type="timestamp"></column>
        </createTable>
    </changeSet>

    <changeSet id="create_table_project_employee" author="oadmin">
        <createTable tableName="project_employee">
            <column name="id" type="bigint" defaultValueSequenceNext="sq_project_employee">
                <constraints primaryKey="true" primaryKeyName="pk_project_employee_id" nullable="false"/>
            </column>
            <column name="employee_id" type="bigint"></column>
            <column name="project_id" type="bigint"></column>
            <column name="position" type="varchar(255)"></column>
            <column name="rate" type="varchar(255)"></column>
            <column name="startOnProject" type="date"></column>
            <column name="endOnProject" type="date"></column>
            <column name="created" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP"></column>
            <column name="updated" type="timestamp"></column>
        </createTable>
    </changeSet>

    <changeSet id="create_table_project_customer" author="oadmin">
        <createTable tableName="project_customer">
            <column name="id" type="bigint" defaultValueSequenceNext="sq_project_customer">
                <constraints primaryKey="true" primaryKeyName="pk_project_customer_id" nullable="false"/>
            </column>
            <column name="customer_id" type="bigint"></column>
            <column name="project_id" type="bigint"></column>
            <column name="created" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP"></column>
            <column name="updated" type="timestamp"></column>
        </createTable>
    </changeSet>


    <changeSet id="add_foreign_key_constraints" author="oadmin">

        <addForeignKeyConstraint
                constraintName="fk_project_customer_project"
                baseTableName="project_customer"
                baseColumnNames="project_id"
                referencedTableName="project"
                referencedColumnNames="id"
                onDelete="SET NULL"
                onUpdate="CASCADE"/>

        <addForeignKeyConstraint
                constraintName="fk_project_customer_customer"
                baseTableName="project_customer"
                baseColumnNames="customer_id"
                referencedTableName="customer"
                referencedColumnNames="id"
                onDelete="SET NULL"
                onUpdate="CASCADE"/>

        <addForeignKeyConstraint
                constraintName="fk_project_employee_project"
                baseTableName="project_employee"
                baseColumnNames="project_id"
                referencedTableName="project"
                referencedColumnNames="id"
                onDelete="SET NULL"
                onUpdate="CASCADE"/>

        <addForeignKeyConstraint
                constraintName="fk_report_project"
                baseTableName="report"
                baseColumnNames="project_id"
                referencedTableName="project"
                referencedColumnNames="id"
                onDelete="SET NULL"
                onUpdate="CASCADE"/>

    </changeSet>



</databaseChangeLog>